IMPORT userAccountChoice FROM UtilAccountChoice.py
IMPORT accountEditBalance FROM UtilEditBalance.py
IMPORT askingOption FROM AskingOption.py

FUNCTION userInputStart
    TRY
        IF option is not q THEN
            CALL askingOption
        ELSE
            TRY
                quit
            EXCEPT TypeError
                quit
    EXCEPT TypeError
        restart

FUNCTION userEditAccount
    TRY
        Add, minus, show balance or quit
    EXCEPT TypeError
        restart
    EXCEPT ValueError
        restart

FUNCTION mainProgram()
    INPUT option
    WRITE "Please enter your UserID"
    INPUT UserChoose
    CALL userAccountChoice
    CALL userEditAccount
    mainProgram()